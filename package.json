{
  "name": "govee-control-scripts",
  "version": "1.0.0",
  "description": "CLI tool for controlling Govee devices",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "govee": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "NODE_OPTIONS='--loader ts-node/esm' ts-node --esm src/index.ts",
    "copy-config": "mkdir -p dist/config && cp -r src/config/* dist/config/",
    "build": "tsc && npm run copy-config",
    "cli": "NODE_OPTIONS='--loader ts-node/esm' ts-node --esm src/cli.ts",
    "prepare": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@inquirer/core": "^10.1.1",
    "@types/commander": "^2.12.5",
    "@types/inquirer": "^8.2.10",
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "dotenv": "^16.3.1",
    "inquirer": "^8.2.6",
    "yoctocolors": "^2.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.17.10",
    "dotenv": "^16.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
