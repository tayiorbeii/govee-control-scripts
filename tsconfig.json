{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": null,
    "moduleDetection": "force",
    "allowImportingTsExtensions": false,
    "removeComments": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
} 